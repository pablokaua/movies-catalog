<%= form_with model: @movie do |f|%>
  <%= f.label :title, 'Título' %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :release_year, 'Ano de Lançamento' %>
  <%= f.number_field :release_year %>
  <br>
  <%= f.label :country, 'País de Origem' %>
  <%= f.text_field :country %>
  <br>
  <%= f.label :duration, 'Duração(minutos)' %>
  <%= f.number_field :duration %>
  <br>
  <%= f.label :director_id, 'Diretor' %>
  <%= f.collection_select :director_id, Director.all, :id, :name%>
  <br>
  <%= f.label :movie_genre_id, 'Gênero' %>
  <%= f.collection_select :movie_genre_id, MovieGenre.all, :id, :name%>
  <br>
  <%= f.submit 'Salvar' %>
<%end%>